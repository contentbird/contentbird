<% types_select = {t('.all_formats') => 'all'} %>
<% types.each {|type| types_select[type.translated_title] = type.id if can_display_type?(type)} %>
<% selected_value = current_type ? current_type.id : 'all' %>
<%= form_tag(contents_path, method: :get ) do %>
	<div class="row">
			<div class="cell ratio1">
					<%= select_tag  "content_type_id",
									options_for_select(types_select, selected_value),
									onchange: "this.form.submit()",
									class: 'fancy' %>
			</div>
			<div class="cell ratio1">
				<%= search_field_tag :search, params[:search], autosave: true, placeholder: t('.search'), autofocus: 'autofocus' %>
			</div>
	</div>
<% end %>