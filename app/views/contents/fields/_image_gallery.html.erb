    <%= f.label field.id, field.translated_title(content_type).capitalize %>
    <div class="row">
        <ul class="gal-images _images _sortableGallery">
            <li class="_addImageZone image-add">
                <%= link_to '', new_multi_upload_path(field: field.id, media_type: 'image', sub_folder: content_id), class: '_addImage butn-no-text action', data: {icon: raw("&#xe001;")} %>
            </li>
        </ul>
    </div>
</div>

