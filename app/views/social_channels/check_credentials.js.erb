$('#check_creds_butn_<%=params[:id]%>').removeClass('togl-work').addClass('togl-off');
resultPanel = $('#check_creds_result_<%=params[:id]%>')
<% if @credentials_ok %>
    resultPanel.removeClass('error').addClass('notice').html('<%= t ".valid" %>, <%= @credentials[:user_name] %> !');
<% else %>
    resultPanel.removeClass('notice').addClass('error').html('<%= t ".broken" %> <%= link_to t(".retry"), "javascript:$(\'#check_creds_butn_#{params[:id]}\').trigger(\'click\');" %> <%= t "or" %> <%= link_to t(".authorize_again"), "/auth/#{@provider}" %>.');
<% end %>