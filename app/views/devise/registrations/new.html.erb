<section>
    <div class="grid-no-border">
        <div class="row">
            <div class="cell ratio1"></div>
            <div class="cell ratio3">
                <div class="box">
                    <div class="box-hd">
                        <h1><%= t '.title' %></h1>
                    </div>
                    <div class="box-bd">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= render "shared/error_messages", target: resource %>
                            <div>
                                <%= f.text_field :nest_name, autofocus: true, placeholder: t('activerecord.attributes.cb/core/user.nest_name') %>
                            </div>
                            <div>
                                <%= f.email_field :email, placeholder: t('activerecord.attributes.cb/core/user.email') %>
                            </div>
                            <div>
                                <%= f.password_field :password, placeholder: t('activerecord.attributes.cb/core/user.encrypted_password') %>
                            </div>
                            <%= f.hidden_field(:token) if resource.token.present? %>
                            <div>
                                <%= f.submit t('.submit') %>
                            </div>
                        <% end %>
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
            <div class="cell ratio1"></div>
        </div>
    </div>
</section>
