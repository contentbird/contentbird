<section>
    <h1><%= t '.title' %></h1>
    <div class="grid-no-border">
        <div class="row">
            <div class="cell ratio1"></div>
            <div class="cell ratio3">
                <div class="box">
                    <div class="box-bd">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						 	<div>
								<%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.cb/core/user.email') %>
							</div>

							<div>
						  		<%= f.password_field :password, placeholder: t('activerecord.attributes.cb/core/user.encrypted_password') %>
						  	</div>

							<% if devise_mapping.rememberable? -%>
								<div>
									<%= f.check_box :remember_me %> <%= f.label t('.remember_me'), class: 'logIn' %>
								</div>
							 <% end -%>

						  	<div><%= f.submit t('devise.common.sign_in'), class: 'signIn' %></div>
						<% end %>
						<%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
            <div class="cell ratio1"></div>
        </div>
    </div>
</section>